        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EpisodeActivity" />
        <activity
            android:name=".ViewerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DownloadActivity" />
        <activity android:name=".OfflineEpisodeActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".FolderSelectActivity" />
        <activity android:name=".TagSearchActivity" />
        <activity android:name=".ViewerActivity2" />
        <activity android:name=".LicenseActivity" />
        <activity
            android:name=".AdvSearchActivity"
            android:label="고급 검색" />
        <activity
            android:name=".CommentsActivity"
            android:label="댓글"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DebugActivity" />
        <activity android:name=".NoticesActivity"></activity>
    </application>

</manifest>